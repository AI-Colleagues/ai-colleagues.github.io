---
import '../styles/global.css';
import { Header } from '@/components/Header';
import { Footer } from '@/components/Footer';
import ChatBubble from '@/components/ChatBubble.astro';

const {
  title = 'AI Colleagues - AI Consulting and Workflow Engineering',
  description = 'AI Colleagues builds production AI workflows with Orcheo, from design to deployment and monitoring.',
} = Astro.props;

const base = import.meta.env.BASE_URL;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/x-icon" href={`${base}favicon.ico`} />
    <title>{title}</title>
  </head>
  <body>
    <Header client:load />
    <main>
      <slot />
    </main>
    <Footer />
    <ChatBubble />
  </body>
</html>
