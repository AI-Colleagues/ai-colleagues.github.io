---
import Layout from '../../layouts/main.astro';
import PostCardGrid from '@/components/content/PostCardGrid.astro';
import { getPublishedPosts } from '@/lib/content';

const posts = await getPublishedPosts('blog');
---

<Layout title="Blog - AI Colleagues">
  <section class="py-20 md:py-28">
    <div class="container mx-auto px-4">
      <div class="text-center space-y-4 mb-14">
        <h1 class="text-4xl md:text-6xl font-bold">
          Technical
          <span class="bg-gradient-to-r from-blue-600 to-cyan-600 dark:from-blue-400 dark:to-cyan-300 bg-clip-text text-transparent"> Blog</span>
        </h1>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
          Engineering notes and implementation practices from AI Colleagues.
        </p>
      </div>

      <PostCardGrid posts={posts} hrefPrefix="/blog" ctaLabel="Read post" />
    </div>
  </section>
</Layout>
