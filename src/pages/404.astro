---
import Layout from '../layouts/main.astro';
import { Home, Search, ArrowLeft } from 'lucide-react';
import { withBase } from '@/lib/utils';
---

<Layout title="Page Not Found - AI Colleagues">
  <section class="min-h-[60vh] py-20 md:py-32 flex items-center">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl mx-auto text-center">
        <div class="mb-8">
          <div class="relative">
            <h1 class="text-9xl md:text-[200px] font-bold bg-gradient-to-r from-cyan-600 to-blue-600 dark:from-cyan-300 dark:to-blue-300 bg-clip-text text-transparent opacity-20">
              404
            </h1>
            <div class="absolute inset-0 flex items-center justify-center">
              <Search class="h-24 w-24 md:h-32 md:w-32 text-cyan-600 dark:text-cyan-300" />
            </div>
          </div>
        </div>

        <h2 class="text-3xl md:text-4xl font-bold mb-4">Page Not Found</h2>
        <p class="text-lg text-muted-foreground mb-8">
          The page you requested is unavailable or may have moved.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href={withBase('/')}
            class="inline-flex items-center justify-center gap-2 h-10 px-6 rounded-md bg-primary text-primary-foreground font-medium hover:bg-primary/90 transition-colors"
          >
            <Home class="h-4 w-4" />
            Back to Home
          </a>
          <button
            onclick="history.back()"
            class="inline-flex items-center justify-center gap-2 h-10 px-6 rounded-md border bg-background hover:bg-accent hover:text-accent-foreground transition-colors"
          >
            <ArrowLeft class="h-4 w-4" />
            Go Back
          </button>
        </div>

        <div class="mt-12 pt-8 border-t">
          <p class="text-sm text-muted-foreground mb-4">Try one of these pages:</p>
          <div class="flex flex-wrap gap-4 justify-center">
            <a href={withBase('/blog')} class="text-sm text-primary hover:underline">Blog</a>
            <a href={withBase('/news')} class="text-sm text-primary hover:underline">News</a>
            <a href={withBase('/contact')} class="text-sm text-primary hover:underline">Contact</a>
            <a href={withBase('/#faq')} class="text-sm text-primary hover:underline">FAQ</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
