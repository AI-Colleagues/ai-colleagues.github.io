---
import Layout from '../../layouts/main.astro';
import { getCollection, type CollectionEntry } from 'astro:content';
import { ArrowLeft, Calendar, Clock } from 'lucide-react';
import { withBase } from '@/lib/utils';
import { estimateReadingTime } from '@/lib/readingTime';

export async function getStaticPaths() {
  const posts = await getCollection('news', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

type Props = {
  post: CollectionEntry<'news'>;
};

const { post } = Astro.props as Props;
const { Content } = await post.render();
const readingTime = estimateReadingTime(post.body);
---

<Layout title={`${post.data.title} - AI Colleagues`}>
  <article class="py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="max-w-3xl mx-auto">
        <a
          href={withBase('/news')}
          class="inline-flex items-center gap-2 text-sm text-muted-foreground hover:text-foreground transition-colors mb-8"
        >
          <ArrowLeft class="h-4 w-4" />
          Back to News
        </a>

        <header class="mb-10 border-b pb-8">
          <div class="flex items-center gap-3 text-sm text-muted-foreground mb-4">
            <span class="inline-flex items-center gap-1">
              <Calendar class="h-4 w-4" />
              {post.data.pubDate.toLocaleDateString('en-US', {
                month: 'short',
                day: 'numeric',
                year: 'numeric',
              })}
            </span>
            <span class="inline-flex items-center gap-1">
              <Clock class="h-4 w-4" />
              {readingTime.text}
            </span>
            <span class="inline-block px-2 py-1 rounded-full bg-primary/10 text-primary text-xs font-medium">
              {post.data.category}
            </span>
          </div>
          <h1 class="text-3xl md:text-5xl font-bold mb-4">{post.data.title}</h1>
          <p class="text-lg text-muted-foreground">{post.data.summary}</p>
        </header>

        <div class="prose prose-lg dark:prose-invert max-w-none">
          <Content />
        </div>
      </div>
    </div>
  </article>
</Layout>
