---
import PostDetailPage from '@/components/content/PostDetailPage.astro';
import { getPostStaticPaths, type PostEntry } from '@/lib/content';

export async function getStaticPaths() {
  return getPostStaticPaths('news');
}

type Props = {
  post: PostEntry<'news'>;
};

const { post } = Astro.props as Props;
---

<PostDetailPage post={post} backHref="/news" backLabel="Back to News" />
